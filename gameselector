<body>
  <h1>Select a Game</h1>
  <select id="gameSelect" onchange="selectGame()">
    <option value="">-- Select a game --</option>
    <option value="https://sites.google.com/view/bypass6/2048">2048</option>
    <option value="https://sites.google.com/view/bypass6/slope-game">Slope Game</option>
    <option value="https://sites.google.com/view/bypass6/shell-shockers">Shell Shockers</option>
    <option value="https://sites.google.com/view/bypass6/1v1-lol">1v1.lol</option>
  </select>

  <script>
    function selectGame() {
      var selectedGame = document.getElementById("gameSelect").value;
      if (selectedGame !== "") {
        window.open(selectedGame, "_blank");
      }
    }
  </script>
